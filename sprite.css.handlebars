{{#sprites}}
	@mixin {{name}}($onlyPos:all) {
		@if $onlyPos == pos {
			background-position: {{px.offset_x}} {{px.offset_y}};
		} @else {
			display:inline-block;
			width: {{px.width}};
			height: {{px.height}};
			background-position: {{px.offset_x}} {{px.offset_y}};
			background-size: {{px.total_width}} {{px.total_height}};
			background-image: url($spriteURL+'{{{escaped_image}}}'+$spriteCache);
			background-repeat: no-repeat;	
		}
	}
{{/sprites}}

{{#sprites}}
    .{{name}} {@include {{name}}();}
{{/sprites}}